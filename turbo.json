{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_URL",
    "ANTHROPIC_API_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "GOOGLE_SAFE_BROWSING_API_KEY",
    "VIRUSTOTAL_API_KEY",
    "RESEND_API_KEY",
    "RESEND_FROM_EMAIL",
    "CRON_SECRET",
    "R2_ACCOUNT_ID",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "R2_BUCKET_NAME",
    "PROMPT_VERSION",
    "ADMIN_SECRET",
    "ADMIN_EMAIL",
    "OPENAI_API_KEY",
    "REALITY_DEFENDER_API_KEY",
    "RESEMBLE_AI_API_TOKEN",
    "TWILIO_ACCOUNT_SID",
    "TWILIO_AUTH_TOKEN",
    "WHOIS_API_KEY",
    "INNGEST_EVENT_KEY",
    "INNGEST_SIGNING_KEY",
    "NEXT_PUBLIC_FF_MEDIA_ANALYSIS",
    "NEXT_PUBLIC_FF_DEEPFAKE",
    "NEXT_PUBLIC_FF_PHONE_INTEL",
    "NEXT_PUBLIC_FF_VIDEO_UPLOAD",
    "NEXT_PUBLIC_FF_SCAM_REPORTING",
    "NEXT_PUBLIC_FF_SCAM_URL_REPORTING",
    "NEXT_PUBLIC_ABN",
    "NEXT_PUBLIC_PLAUSIBLE_DOMAIN"
  ]
}
